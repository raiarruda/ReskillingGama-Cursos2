@model Cursos.Models.Entidades.Curso

@{
    ViewData["Title"] = "Editar Curso";
}

<section>
    <div>
        <h1 class="text-center">Editar Curso</h1>
        <hr />
    </div>
    <div class="container">
        <div class="card row">
            <div class="card-body col-10 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="thumbnail" class="col-sm-2 col-form-label"></label>
                        <input asp-for="thumbnail" class="form-control"/>
                        <span asp-validation-for="thumbnail" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="nome" class="col-sm-2 col-form-label"></label>
                        <input asp-for="nome" class="form-control"/>
                        <span asp-validation-for="nome" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="resumo" class="col-sm-2 col-form-label"></label>
                        <input asp-for="resumo" class="form-control"/>
                        <span asp-validation-for="resumo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="descricao" class="col-sm-2 col-form-label"></label>
                        <textarea asp-for="descricao" class="form-control"></textarea>
                        <span asp-validation-for="descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="publicoAlvo" class="col-sm-2 col-form-label"></label>
                        <input asp-for="publicoAlvo" class="form-control"/>
                        <span asp-validation-for="publicoAlvo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="cargaHoraria" class="col-sm-2 col-form-label"></label>
                        <input asp-for="cargaHoraria" class="form-control"/>
                        <span asp-validation-for="cargaHoraria" class="text-danger"></span>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="d-grid col-2 ms-auto">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                        </div>
                        <div class="d-grid col-2 me-auto">
                            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
