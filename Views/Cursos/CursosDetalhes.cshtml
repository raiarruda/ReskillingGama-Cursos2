@model Cursos.Models.ViewModels.CursoViewModel

@{
    ViewData["Title"] = "Detalhes do curso";
}




<div class="p-5 mb-4 bg-light round-3" style="background: url(@Model.thumbnail);">
    <div class="container-fluid py-5" >
        <h1 class="display-5 fw-bold">@Model.nome</h1>
        <p class="col-md-8 fs-4">@Model.resumo</p><a class="btn btn-primary btn-lg" role="button" href="#">Inscreva-se</a>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-lg-7">
            <p class="lead"><br>@Model.descricao.<br><br></p>
        </div>
        <div class="col-md-6 col-lg-5 col-xl-4 d-lg-flex align-items-lg-center">
            <ul class="list-group">
                <li class="list-group-item"><i class="fas fa-users mr-3"></i><span></span><span> @Model.publicoAlvo</span></li>
                <li class="list-group-item"><i class="fas fa-stopwatch mr-3"></i><span>@Model.cargaHoraria</span></li>
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <h1 class="mb-4 mt-4">Programação</h1>
    <ul class="list-group" >
        @foreach(var item in Model.aulas)
        {
            <li class="list-group-item"><span>@item.titulo</span></li>
        }
        
        
    </ul>
</div>