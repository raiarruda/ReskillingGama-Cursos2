@model IEnumerable<Cursos.Models.Entidades.Professor>

@{
    ViewData["Title"] = "Gerenciar Professores";
}

<h1>Gerenciar Professores</h1>

<p>
    <a asp-action="Create">Cadastrar Professor</a>
</p>

<table class="table table-striped">
    <thead class="thead-Plum"> 
        <tr>
            <th>
                Nome
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
        
           <td>
                <a class="badge bg-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i> Editar</a> |
                <a class="badge bg-warning text-dark" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> Detalhes</a> |
                <a class="badge bg-danger"asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i> Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
