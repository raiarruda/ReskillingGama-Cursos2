@model Cursos.Models.Entidades.Professor

@{
    ViewData["Title"] = "Editar Professor";
}

<section>
    <div>
        <h1 class="text-center">Editar Professor</h1>
        <hr />
    </div>
    <div class="container">
        <div class="card row">
            <div class="card-body col-10 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-2">
                        <label asp-for="nome" class="control-label"></label>
                        <input asp-for="nome" class="form-control" />
                        <span asp-validation-for="nome" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="titulo" class="control-label"></label>
                        <input asp-for="titulo" class="form-control" />
                        <span asp-validation-for="titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="sobre" class="control-label"></label>
                        <textarea asp-for="sobre" class="form-control"></textarea>
                        <span asp-validation-for="sobre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="foto" class="control-label"></label>
                        <input asp-for="foto" class="form-control" />
                        <span asp-validation-for="foto" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="urlFacebook" class="control-label"></label>
                        <input asp-for="urlFacebook" class="form-control" />
                        <span asp-validation-for="urlFacebook" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="urlTwitter" class="control-label"></label>
                        <input asp-for="urlTwitter" class="form-control" />
                        <span asp-validation-for="urlTwitter" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="urlInstagram" class="control-label"></label>
                        <input asp-for="urlInstagram" class="form-control" />
                        <span asp-validation-for="urlInstagram" class="text-danger"></span>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="d-grid col-2 ms-auto">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                        </div>
                        <div class="d-grid col-2 me-auto">
                            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
