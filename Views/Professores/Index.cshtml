@model IEnumerable<Cursos.Models.Entidades.Professor>

@{
    ViewData["Title"] = "Professores";
}
<section">
    <h1>PROFESSORES</h1>
    <div class="row row-cols-1 row-cols-md-3 row-cols-sm-1">
        @foreach (var item in Model)
        {
            <div class="professor-card">
                <div class="card-body ">
                    <div class="mx-auto">
                        <img src=" @Html.DisplayFor(modelItem => item.foto)" class="card-img professor-img" alt="...">
                    </div>
                    <div class="mb-3">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.nome)</h5>
                        <p class="card-text text">@Html.DisplayFor(modelItem => item.sobre)</p>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-brands fa-facebook-f"></i></a>
                        </div>
                        <div class="col-2">
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-brands fa-twitter"></i></a>
                        </div>
                        <div class="col-2">
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-brands fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</section>