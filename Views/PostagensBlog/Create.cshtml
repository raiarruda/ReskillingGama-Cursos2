@model Cursos.Models.Entidades.PostagemBlog

@{
    ViewData["Title"] = "Criar Postagem";
}

<section>
    <div class="form-title">
        <h1>Criar Postagem</h1>
        <hr />
    </div>
    <div class="container">
        <div class="card row">
            <div class="card-body col-10 mx-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="tituloPost" class="control-label"></label>
                        <input asp-for="tituloPost" class="form-control" />
                        <span asp-validation-for="tituloPost" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="imagemCapa" class="control-label"></label>
                        <input asp-for="imagemCapa" class="form-control" />
                        <span asp-validation-for="imagemCapa" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="conteudo" class="control-label"></label>
                        <textarea asp-for="conteudo" class="form-control"></textarea>
                        <span asp-validation-for="conteudo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="autor" class="control-label"></label>
                        <input asp-for="autor" class="form-control" />
                        <span asp-validation-for="autor" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="d-grid col-2 ms-auto">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                        </div>
                        <div class="d-grid col-2 me-auto">
                            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
