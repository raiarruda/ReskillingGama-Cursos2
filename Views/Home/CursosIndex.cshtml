@model IEnumerable<Cursos.Models.Entidades.Curso>

@{
    ViewData["Title"] = "Cursos";
}

<h1>CURSOS</h1>

<section>
    <div class="row row-cols-1 row-cols-md-3 row-cols-sm-1 g-4">
        @foreach (var item in Model)
        {
        <div class="col">
            <div class="card h-100">
                <img src="@Html.DisplayFor(modelItem => item.thumbnail)" class="img-fluid rounded-start" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.resumo)</p>
                    <button class="btn btn-warning">
                        <a class="" asp-action="CursosDetalhes" asp-route-id="@item.Id">Veja mais</a>
                    </button>
                </div>
            </div>
        </div>
        }
    </div>
</section>