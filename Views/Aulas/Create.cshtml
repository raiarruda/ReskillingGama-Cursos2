@model Cursos.Models.Entidades.Aula

@{
    ViewData["Title"] = "Cadastrar Aula";
}

<h1>Cadastrar aula para o curso</h1>

<h4>Aula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="numeroOrdem" class="control-label"></label>
                <input asp-for="numeroOrdem" class="form-control" />
                <span asp-validation-for="numeroOrdem" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="titulo" class="control-label"></label>
                <input asp-for="titulo" class="form-control" />
                <span asp-validation-for="titulo" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="descricao" class="control-label"></label>
                <input asp-for="descricao" class="form-control" />
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="cursoId" class="control-label"></label>
                <select asp-for="cursoId" class ="form-control" asp-items="ViewBag.cursoId"></select>

            </div>
            <div class="row mb-3">
                <div class="d-grid col-2">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
                <div class="d-grid col-2 ms-4">
                    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
